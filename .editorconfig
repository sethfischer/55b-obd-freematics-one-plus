root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{cpp,h}]
indent_size = 4

[*.{md,adoc}]
trim_trailing_whitespace = false

[.vscode/extensions.json]
end_of_line = crlf
